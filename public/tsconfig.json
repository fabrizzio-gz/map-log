{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "./build/",
      "rootDir": "./src/",
      "baseUrl": ".",
      "composite": true,
        "paths": {
          "*": [
            "../node_modules/*"
          ]
        }
    },
  "include": [
    "./src/*.ts"
  ]
}
